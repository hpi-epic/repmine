<%= form_for(ac, :html => {:class => "needs_no_space edit_attribute_constraint"}) do |f| %>
  <%= f.select(:rdf_type, attrib_selector(ac.possible_attributes, ac), {}, {:class => "just_right"}) %>
  <%= f.select(:operator,options_for_select(AttributeConstraint::OPERATORS.values, ac.operator),{},{:class => "very_narrow"})%>
  <%= f.text_field(:value, {:class => "just_right"}) %>
  <%= f.hidden_field :x %>
  <%= f.hidden_field :y %>
  <%= link_to(fa_icon("times-circle"), attribute_constraint_path(ac), :remote => true, :method => :delete) %>
<% end %>
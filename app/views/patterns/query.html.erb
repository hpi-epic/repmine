<%= form_tag(monitor_measurables_path()) do %>
  <div class="btn-group">
    <%= hidden_field_tag("measurables[]", [@pattern.id])%>
    <%= button_tag("Run on:", :class => "btn btn-info", :name => "monitor") %>
    <%= select_tag(:repository_id, options_from_collection_for_select(@repositories, "id", "name"),{class: "needs_no_space"}) %>
  </div>
<% end %>

<legend><%= @language %></legend>
<%= text_area_tag(:query_string, @query, :class => "form-control full_page", :rows => 10)%>
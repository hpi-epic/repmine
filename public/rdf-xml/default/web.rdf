<?xml version="1.0" encoding='ISO-8859-1'?>

<!DOCTYPE rdf:RDF [
  <!ENTITY dstore "http://hpi-web.de/ns/dstore/0.1/" >
  <!ENTITY web    "http://hpi-web.de/ns/dstore/web/0.1/" >
  <!ENTITY owl    "http://www.w3.org/2002/07/owl#" > 
  <!ENTITY rdf    "http://www.w3.org/1999/02/22-rdf-syntax-ns#" > 
  <!ENTITY rdfs   "http://www.w3.org/2000/01/rdf-schema#" > 
  <!ENTITY xsd    "http://www.w3.org/2001/XMLSchema#" > 
  <!ENTITY dc     "http://purl.org/dc/elements/1.1/" >
]>

<rdf:RDF
	xmlns         ="&web;"
    xml:base      ="&web;"
    xmlns:web     ="&web;"
    xmlns:dstore  ="&dstore;"
    xmlns:owl     ="&owl;"
    xmlns:rdf     ="&rdf;"
    xmlns:rdfs    ="&rdfs;"
    xmlns:xsd     ="&xsd;"
    xmlns:dc      ="&dc;"
>
  <!-- About the dstore Vocabulary -->
  <owl:Ontology rdf:about="&web;">
    <dc:title rdf:datatype="&xsd;string">d.store Web Ontology v0.1</dc:title>
    <dc:creator rdf:datatype="&xsd;string">Matthias Uflacker</dc:creator>
    <dc:format rdf:datatype="&xsd;string">application/rdf+xml</dc:format>
	  <dstore:classlabel rdf:datatype="&xsd;string">web</dstore:classlabel>	             
  </owl:Ontology>

  <!-- =============== -->
  <!--  Classes        -->
  <!-- =============== -->
  <rdfs:Class rdf:about="&web;WebResource">
	<rdf:type rdf:resource="&owl;Class"/>
	<rdfs:subClassOf rdf:resource="&dstore;OntologyResource" />		
	<rdfs:isDefinedBy rdf:resource="&web;"/>
	<dstore:classlabel rdf:datatype="&xsd;string">Web</dstore:classlabel>
	<rdfs:label rdf:datatype="&xsd;string">Web Resource</rdfs:label>	
	<rdfs:comment rdf:datatype="&xsd;string">Web Resources</rdfs:comment>
  </rdfs:Class>
  
  <!-- ================== -->
  <!-- Properties         -->
  <!-- ================== -->
  <!-- Resource > hyperlink > WebResource -->
  <rdf:Property rdf:about="&web;hyperlink">
    <rdf:type rdf:resource="&dstore;OntologyRelation"/>
	  <rdfs:label xml:lang="en">hyperlink</rdfs:label>
    <rdfs:comment xml:lang="en">A hyperlink to a Web resource</rdfs:comment>
    <rdfs:domain rdf:resource="&dstore;Resource"/>
    <rdfs:range  rdf:resource="&web;WebResource"/>
    <rdfs:isDefinedBy rdf:resource="&web;"/>
  </rdf:Property>
  
  <!-- WebResource > linked_from > Resource -->
  <rdf:Property rdf:about="&web;linkedFrom">
    <rdf:type rdf:resource="&dstore;OntologyRelation"/>
	  <rdfs:label xml:lang="en">linked from</rdfs:label>
    <rdfs:comment xml:lang="en">A resource that contains a hyperlink to this resource</rdfs:comment>
    <rdfs:domain  rdf:resource="&web;WebResource"/>
    <rdfs:range rdf:resource="&dstore;Resource"/>   
    <owl:inverseOf rdf:resource="&web;hyperlink"/>     
    <rdfs:isDefinedBy rdf:resource="&web;"/>
  </rdf:Property>  

</rdf:RDF>
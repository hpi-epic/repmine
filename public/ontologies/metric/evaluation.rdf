<?xml version="1.0" encoding='ISO-8859-1'?>

<!DOCTYPE rdf:RDF [
  <!ENTITY dstore     "http://hpi-web.de/ns/dstore/0.1/" >
  <!ENTITY evaluation "http://hpi-web.de/ns/dstore/evaluation/0.1/" >
  <!ENTITY web        "http://hpi-web.de/ns/dstore/web/0.1/" >
  <!ENTITY email      "http://hpi-web.de/ns/dstore/email/0.1/" >  
  <!ENTITY owl        "http://www.w3.org/2002/07/owl#" > 
  <!ENTITY rdf        "http://www.w3.org/1999/02/22-rdf-syntax-ns#" > 
  <!ENTITY rdfs       "http://www.w3.org/2000/01/rdf-schema#" > 
  <!ENTITY xsd        "http://www.w3.org/2001/XMLSchema#" > 
  <!ENTITY dc         "http://purl.org/dc/elements/1.1/" >
  <!ENTITY foaf   "http://xmlns.com/foaf/0.1/" >  
]>

<rdf:RDF
	  xmlns             ="&evaluation;"
    xml:base          ="&evaluation;"
    xmlns:evaluation  ="&evaluation;"
    xmlns:dstore      ="&dstore;"
    xmlns:web         ="&web;"
    xmlns:email       ="&email;"    
    xmlns:owl         ="&owl;"
    xmlns:rdf         ="&rdf;"
    xmlns:rdfs        ="&rdfs;"
    xmlns:xsd         ="&xsd;"
    xmlns:dc          ="&dc;"    
	  xmlns:foaf        ="&foaf;"    
>
  <!-- About the dstore Vocabulary -->
  <owl:Ontology rdf:about="&evaluation;">
    <dc:title rdf:datatype="&xsd;string">d.store evaluation Ontology v0.2</dc:title>
    <dc:creator rdf:datatype="&xsd;string">Thomas Kowark</dc:creator>
    <dc:format rdf:datatype="&xsd;string">application/rdf+xml</dc:format>
	  <dstore:classlabel rdf:datatype="&xsd;string">evaluation</dstore:classlabel>	     
  </owl:Ontology>
  
  <!-- =============== -->
  <!--  Classes        -->
  <!-- =============== -->
  
  <rdfs:Class rdf:about="&evaluation;TutorEvaluation">
	  <rdf:type rdf:resource="&owl;Class"/>
  	<rdfs:subClassOf rdf:resource="&dstore;OntologyResource"/>
  	<rdfs:isDefinedBy rdf:resource="&evaluation;"/>
  	<dstore:classlabel rdf:datatype="&xsd;string">TutorEvaluation</dstore:classlabel>
  	<rdfs:comment rdf:datatype="&xsd;string">Evaluation of a team or an individual over a certain timespan</rdfs:comment>
  </rdfs:Class>
  
  <!-- ================== -->
   <!-- Properties         -->
   <!-- ================== -->

   <!-- TutorEvaluation > effort > nonNegativeInteger -->
   <dstore:OntologyAttribute rdf:about="&evaluation;effort">	
 	   <rdfs:label xml:lang="en">effort</rdfs:label>
     <rdfs:comment xml:lang="en">Effort Rating</rdfs:comment>
     <rdfs:domain rdf:resource="&evaluation;TutorEvaluation"/>
     <rdfs:range  rdf:resource="&xsd;nonNegativeInteger"/>
     <rdfs:isDefinedBy rdf:resource="&evaluation;"/>
   </dstore:OntologyAttribute>
   
   <!-- TutorEvaluation > progress > nonNegativeInteger -->
   <dstore:OntologyAttribute rdf:about="&evaluation;progress">	
 	   <rdfs:label xml:lang="en">progress</rdfs:label>
     <rdfs:comment xml:lang="en">Progress Rating</rdfs:comment>
     <rdfs:domain rdf:resource="&evaluation;TutorEvaluation"/>
     <rdfs:range  rdf:resource="&xsd;nonNegativeInteger"/>
     <rdfs:isDefinedBy rdf:resource="&evaluation;"/>
   </dstore:OntologyAttribute>
   
   <!-- TutorEvaluation > evaluation_start > dateTime -->
   <dstore:OntologyAttribute rdf:about="&evaluation;evaluation_start">	
 	   <rdfs:label xml:lang="en">evaluation_start</rdfs:label>
     <rdfs:comment xml:lang="en">Begin of the evaluation period</rdfs:comment>
     <rdfs:domain rdf:resource="&evaluation;TutorEvaluation"/>
     <rdfs:range  rdf:resource="&xsd;dateTime"/>
     <rdfs:isDefinedBy rdf:resource="&evaluation;"/>
   </dstore:OntologyAttribute>
   
   <!-- TutorEvaluation > evaluation_end > dateTime -->
   <dstore:OntologyAttribute rdf:about="&evaluation;evaluation_end">	
 	   <rdfs:label xml:lang="en">evaluation_end</rdfs:label>
     <rdfs:comment xml:lang="en">End of the evaluation period</rdfs:comment>
     <rdfs:domain rdf:resource="&evaluation;TutorEvaluation"/>
     <rdfs:range  rdf:resource="&xsd;dateTime"/>
     <rdfs:isDefinedBy rdf:resource="&evaluation;"/>
   </dstore:OntologyAttribute>
   
   <!-- TutorEvaluation > comment > string -->
   <dstore:OntologyAttribute rdf:about="&evaluation;comment">	
 	   <rdfs:label xml:lang="en">comment</rdfs:label>
     <rdfs:comment xml:lang="en">Optional Comment by Evaluator</rdfs:comment>
     <rdfs:domain rdf:resource="&evaluation;TutorEvaluation"/>
     <rdfs:range  rdf:resource="&xsd;string"/>
     <rdfs:isDefinedBy rdf:resource="&evaluation;"/>
   </dstore:OntologyAttribute>
   
   <!-- TutorEvaluation > evaluates > Person or Team -->
   <dstore:OntologyRelation rdf:about="&evaluation;evaluates">
 	   <rdfs:label xml:lang="en">evaluates</rdfs:label>
     <rdfs:comment xml:lang="en">A person that an evaluation refers to</rdfs:comment>
     <rdfs:domain rdf:resource="&evaluation;TutorEvaluation"/>
     <rdfs:range rdf:resource="&dstore;Agent"/>
     <rdfs:isDefinedBy rdf:resource="&evaluation;"/>
     <owl:inverseOf rdf:resource="&evaluation;evaluatedBy"/>              
     <dstore:refersTo rdf:resource="&email;address"/>    
   </dstore:OntologyRelation>
   
   <!-- Person or Team > evaluatedBy > TutorEvaluation -->
   <dstore:OntologyRelation rdf:about="&evaluation;evaluatedBy">
 	   <rdfs:label xml:lang="en">evaluatedBy</rdfs:label>
     <rdfs:comment xml:lang="en">The TutorEvaluation that a person or team is evaluatedBy</rdfs:comment>
     <rdfs:domain rdf:resource="&dstore;Agent"/>
     <rdfs:range rdf:resource="&evaluation;TutorEvaluation"/>
     <rdfs:isDefinedBy rdf:resource="&evaluation;"/>   
     <owl:inverseOf rdf:resource="&evaluation;evaluates"/>         
   </dstore:OntologyRelation>

</rdf:RDF>